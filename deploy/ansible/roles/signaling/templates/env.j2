# E2EE WebRTC Signaling Server Environment
REDIS_URL=redis://:{{ redis_password }}@{{ redis_host | default('localhost') }}:{{ redis_port | default(6379) }}
NODE_ENV={{ environment | default('production') }}
PORT={{ signaling_port | default(3001) }}
LOG_LEVEL={{ log_level | default('info') }}

# Optional: Metrics
{% if metrics_enabled | default(false) %}
METRICS_ENABLED=true
METRICS_PORT={{ metrics_port | default(9090) }}
{% endif %}

# Optional: CORS
{% if cors_origins is defined %}
CORS_ORIGINS={{ cors_origins | join(',') }}
{% endif %}
